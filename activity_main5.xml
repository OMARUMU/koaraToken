<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">


    <TextView
        android:id="@+id/mokuhyouLabel"
        android:layout_width="203dp"
        android:layout_height="60dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="目標歩数 : "
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/countLabel" />


    <TextView
        android:id="@+id/onegaiLabel"
        android:layout_width="203dp"
        android:layout_height="60dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="本日のお願い : "
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/mokuhyouLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/mokuhyouView"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="5000歩"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/countView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mokuhyouLabel" />

    <TextView
        android:id="@+id/onegaiView"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="草刈り"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mokuhyouView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/onegaiLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871" />

    <TextView
        android:id="@+id/speedLabel"
        android:layout_width="203dp"
        android:layout_height="60dp"
        android:layout_marginBottom="376dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="歩く速さ : "
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/countView"
        android:layout_width="129dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/speedView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/countLabel" />

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="203dp"
        android:layout_height="60dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="現在の歩数 : "
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/speedLabel"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="402dp"
        android:layout_height="80dp"
        android:backgroundTint="#E91E63"
        android:text="リセット"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bunsyouView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bunsyouView"
        android:layout_width="372dp"
        android:layout_height="101dp"
        android:text="お疲れ様でした。メッセージが送信されました。"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/speedView"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/speedLabel" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="398dp"
        android:layout_height="186dp"
        app:layout_constraintBottom_toTopOf="@+id/resetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedLabel"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/mokuhyou_mitatsu_text" />


</android.support.constraint.ConstraintLayout>